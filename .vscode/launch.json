    "version": "0.2.0",
    "configurations": [
        {
            "name": "Client",
            "request": "launch",
            "type": "dart", 
            "program": "client/lib/main.dart",
            "args": ["--web-port=5000", "--dart-define-from-file=.env"]      
        },
        {
            "name": "Client Dev (Emulators)",
            "request": "launch",
            "type": "dart",
            "program": "client/lib/dev_emulators_main.dart",
            "args": ["--web-port=5000", "--dart-define-from-file=.env"]
            
        },
        {
            "name": "Client (profile mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "profile",
            "program": "client/lib/main.dart",
            "args": ["--web-port=5000", "--dart-define-from-file=.env"]
        },
        {
            "name": "Client(release mode)",
            "request": "launch",
            "type": "dart",
            "flutterMode": "release",
            "program": "client/lib/main.dart",
            "args": ["--web-port=5000", "--dart-define-from-file=.env"]
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Functions",
            "port": 9229
        }
    ]
}